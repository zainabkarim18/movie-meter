<%- include('../partials/head.ejs') %>
<div class="container mt-5">
  <h1 class="mb-4 text-center">All Movies</h1>
  <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
    <% allMovies.forEach(movieList => { %>
      <div class="col">
        <div class="card shadow-sm">
          <a href="/movies/detail/<%= movieList._id %>" class="text-decoration-none">
            <img class="card-img-top" width="100%" height="550" src="<%= movieList.image %>" alt="<%= movieList.title %>" />
          </a>
        <% if (user) { %>
          <div class="favorite-btn p-3">
            <form action="/movies/favorites/add/<%= movieList._id %>" method="POST">
              <button type="submit" class="btn btn-sm btn-outline-secondary btn-icon">&#x2661;</button>
            </form>
          </div>
                            <% } %>
        </div>
      </div>
    <% }); %>
  </div>
</div>


<%- include('../partials/footer.ejs') %>
